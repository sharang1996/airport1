<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerHorizontal="true"
    android:background="@drawable/h"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1.0">

            <ImageButton
                android:id="@+id/toDb"
                android:layout_width="125.0dip"
                android:layout_height="125.0dip"
                android:layout_gravity="center"
                android:layout_weight="0.11"
                android:adjustViewBounds="false"
                android:background="@null"
                android:cropToPadding="false"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/custom" />

            <TextView
                android:id="@+id/datetime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/hyderabad_customs_welcomes_you"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="19.0dip"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="20.0dip"
                android:paddingTop="10.0dip"
                android:text="@string/feedback"
                android:textSize="12.0dip"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2.0">

                <Spinner
                    android:id="@+id/mister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15.0dip"
                    android:entries="@array/mister"
                    android:padding="10.0dip" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8.0dip"
                    android:layout_marginTop="8.0dip">

                    <EditText
                        android:id="@+id/editText1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="10.0dip"
                        android:layout_weight="2.16"
                        android:hint="NAME"
                        android:inputType="textPersonName"
                        android:padding="10.0dip"
                        android:windowSoftInputMode="adjustResize" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <Spinner
                android:id="@+id/country"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15.0dip"
                android:entries="@array/countries"
                android:padding="10.0dip" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip"
                android:layout_marginTop="8.0dip">

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15.0dip"
                    android:hint="@string/flight_number"
                    android:inputType="textPersonName"
                    android:padding="10.0dip"
                    android:windowSoftInputMode="adjustResize" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip"
                android:layout_marginTop="8.0dip">

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15.0dip"
                    android:hint="@string/passport_optional"
                    android:inputType="textPersonName"
                    android:padding="10.0dip"
                    android:windowSoftInputMode="adjustResize" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10.0dip"
                android:paddingBottom="20.0dip"
                android:paddingTop="20.0dip">

                <ImageButton
                    android:id="@+id/happy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.16"
                    android:adjustViewBounds="false"
                    android:background="@null"
                    android:cropToPadding="false"
                    android:padding="5.0dip"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/hap" />

                <ImageButton
                    android:id="@+id/satis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.16"
                    android:adjustViewBounds="false"
                    android:background="@null"
                    android:cropToPadding="false"
                    android:padding="5.0dip"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/n2" />

                <ImageButton
                    android:id="@+id/angry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.16"
                    android:adjustViewBounds="false"
                    android:background="@null"
                    android:cropToPadding="false"
                    android:padding="5.0dip"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/s3" />
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip"
                android:layout_marginTop="8.0dip">

                <EditText
                    android:id="@+id/editText6"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="15.0dip"
                    android:layout_weight="0.34"
                    android:ems="6"
                    android:hint="@string/user_fb"
                    android:inputType="textMultiLine"
                    android:padding="10.0dip"
                    android:windowSoftInputMode="adjustResize" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="20.0dip"
                android:textAppearance="?android:textAppearanceLarge" />

            <Button
                android:id="@+id/submit"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="15.0dip"
                android:background="#ffcef2ca"
                android:gravity="center"
                android:text="@string/submit"
                android:textSize="18.0dip" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
